--// Pet Huge Size Changer (Realistic) - by tol mo
-- Path ng hawak mong pet
local petPath = workspace:WaitForChild("flaviohsss"):WaitForChild("Starfish"):WaitForChild("Handle")

--// GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PetSizeChanger"
ScreenGui.Parent = game.CoreGui

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 180, 0, 100)
Frame.Position = UDim2.new(1, -200, 0.5, -50) -- nasa gilid kanan
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Text = "Pet Size Changer"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.Parent = Frame

local TextBox = Instance.new("TextBox")
TextBox.Size = UDim2.new(0.8, 0, 0, 30)
TextBox.Position = UDim2.new(0.1, 0, 0.4, 0)
TextBox.PlaceholderText = "Enter size (ex: 5)"
TextBox.Text = ""
TextBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)
TextBox.ClearTextOnFocus = false
TextBox.Font = Enum.Font.Gotham
TextBox.TextSize = 14
TextBox.Parent = Frame

local ApplyButton = Instance.new("TextButton")
ApplyButton.Size = UDim2.new(0.8, 0, 0, 30)
ApplyButton.Position = UDim2.new(0.1, 0, 0.75, 0)
ApplyButton.Text = "Apply"
ApplyButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
ApplyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ApplyButton.Font = Enum.Font.GothamBold
ApplyButton.TextSize = 14
ApplyButton.Parent = Frame

--// Function to scale realistically
local function setSize(size)
	if size <= 0 then
		warn("Invalid size!")
		return
	end
	
	-- gradual scaling para realistic huge
	local currentSize = petPath.Size
	local goalSize = Vector3.new(size, size, size)
	
	for i = 0, 1, 0.05 do
		petPath.Size = currentSize:Lerp(goalSize, i)
		task.wait(0.02)
	end
end

-- Apply button click
ApplyButton.MouseButton1Click:Connect(function()
	local num = tonumber(TextBox.Text)
	if num then
		setSize(num)
	else
		warn("Please enter a number")
	end
end)
