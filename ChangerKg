-- PET KG CHANGER (Client-Side Visual Only)
-- Gumagana lang sa screen mo, hindi sa server

-- GUI Creation
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PetKgChanger"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 150)
Frame.Position = UDim2.new(1, -210, 0.5, -75) -- Kanang gitna
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BackgroundTransparency = 0.2
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 25)
Title.BackgroundTransparency = 1
Title.Text = "PET KG CHANGER"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 18
Title.Parent = Frame

-- Helper function to create a textbox
local function createTextBox(yPos, placeholder)
    local box = Instance.new("TextBox")
    box.Size = UDim2.new(1, -10, 0, 25)
    box.Position = UDim2.new(0, 5, 0, yPos)
    box.PlaceholderText = placeholder
    box.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    box.TextColor3 = Color3.fromRGB(255, 255, 255)
    box.Text = ""
    box.ClearTextOnFocus = false
    box.Parent = Frame
    return box
end

local PetNameBox = createTextBox(30, "Pet Name")
local SizeBox = createTextBox(60, "Size Multiplier (e.g. 2)")
local KgBox = createTextBox(90, "KG Value")

-- Variable to store detected pet
local currentPet = nil

-- Function to detect equipped pet
local function detectPet()
    local char = game.Players.LocalPlayer.Character
    if not char then return end
    for _, tool in pairs(char:GetChildren()) do
        if tool:IsA("Tool") and tool:FindFirstChild("Handle") then
            currentPet = tool
            break
        end
    end
end

-- Listen for pet equip changes
game.Players.LocalPlayer.Character.ChildAdded:Connect(function()
    detectPet()
end)

game.Players.LocalPlayer.Character.ChildRemoved:Connect(function()
    currentPet = nil
end)

-- First detect
detectPet()

-- Real-time updates
PetNameBox:GetPropertyChangedSignal("Text"):Connect(function()
    if currentPet and currentPet:FindFirstChild("Handle") then
        currentPet.Name = PetNameBox.Text
    end
end)

SizeBox:GetPropertyChangedSignal("Text"):Connect(function()
    if currentPet and currentPet:FindFirstChild("Handle") then
        local sizeVal = tonumber(SizeBox.Text)
        if sizeVal and sizeVal > 0 then
            for _, part in pairs(currentPet.Handle:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Size = part.Size * sizeVal
                end
            end
        end
    end
end)

KgBox:GetPropertyChangedSignal("Text"):Connect(function()
    if currentPet then
        -- Hanapin text label na may "KG"
        for _, desc in pairs(currentPet:GetDescendants()) do
            if desc:IsA("TextLabel") and string.find(desc.Text, "KG") then
                desc.Text = KgBox.Text .. " KG"
            end
        end
    end
end)
